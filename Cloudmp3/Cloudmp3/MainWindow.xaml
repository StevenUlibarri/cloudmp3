<Window x:Class="Cloudmp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Cloudmp3.ValueConverters"
        Title="Cloud Sound" Height="650" Width="910">
    <Window.Resources>
        <Image x:Key="PlayB"  Source="/Images/Play.png"
               Width="50" Height="50"/>
        <Image x:Key="StopB"  Source="/Images/Stop.png"
               Width="50" Height="50"/>
        <Image x:Key="PauseB"  Source="/Images/Pause.png"
               Width="50" Height="50"/>
        <Image x:Key="PreviousB" Source="/Images/Previous.png"
               Width="50" Height="50"/>
        <Image x:Key="NextB" Source="/Images/Next.png"
               Width="50" Height="50"/>
        <Image x:Key="Smile" Source="/Images/Smiley-face-text.png"
               Width="50" Height="50"/>
        <conv:PathToFileNameConverter x:Key="PathToFileName"/>
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainSound">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              x:Name="PlayListCol"
              Background="LightBlue">



            <StackPanel Background="Black">
                <Label Content="PlayLists" Margin="0,145,0,0" FontSize="24" 
                       HorizontalAlignment="Center"
                       Foreground="White" />
                <ListBox x:Name="PlaylistsBox"
                	VerticalAlignment="Top"
                	SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

        </Grid>
        <Grid Grid.Column="1" 
              x:Name="SongList"
              Background="DarkRed"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="70*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="SongsListBox"
                     Grid.Row="1"
                     Background="Transparent"
                     SelectionMode="Single">
                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                         Color="#FF42A7C9" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                         Color="#FF42A7C9" />
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent">
                            <Label Foreground="AntiqueWhite"
                                   MouseDoubleClick="Song_MouseDoubleClick"
                            Content="{Binding Converter={StaticResource PathToFileName}}"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid>
                <Label Foreground="White"
                       Margin="0,25,100,0"
                       HorizontalAlignment="Right"
                        Content="{Binding ElementName= SongSlide, Path=Value}" />

                <!--Couldnt find a attribute to have the slider not move-->

                <Slider Width="300"
                        x:Name="SongSlide"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="30"
                        IsEnabled="False"></Slider>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="Play"
                        Style="{StaticResource NoChromeButton}"
                        Content="{StaticResource PlayB}"
                        VerticalAlignment="Center"
                        Margin="20"
                        Width="50"
                        Click="Play_Click"/>
                <Button x:Name="Stop"
                        Style="{StaticResource NoChromeButton}"
                        Margin="20"
                        VerticalAlignment="Center"
                        Content="{StaticResource StopB}"
                        Width="50"
                        Click="Stop_Click"/>
                <Button x:Name="Previous"
                        VerticalAlignment="Center"
                        Style="{StaticResource NoChromeButton}"
                        Content="{StaticResource PreviousB}"
                        Width="50"
                        Margin="20"
                        Click="Previous_Click"/>
                <Button x:Name="Next"
                        Style="{StaticResource NoChromeButton}"
                        Margin="20"
                        VerticalAlignment="Center"
                        Content="{StaticResource NextB}"
                        Width="50"
                        Click="Next_Click"/>
                <Button x:Name="Smile"
                        Style="{StaticResource NoChromeButton}"
                        VerticalAlignment="Center"
                        Content="{StaticResource Smile}"
                        Background="Transparent"
                        BorderThickness="0"
                        />
            </StackPanel>
            <Label
                Foreground="AntiqueWhite"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="24">Songs</Label>
        </Grid>
        <DockPanel Grid.ColumnSpan="2" Margin="0,0,542,588">
            <ToolBarTray DockPanel.Dock="Top" Height="27" >
                <ToolBar>
                    <Button Content="UpLoad" Click="UpLoad_Click" />
                    <Button Content="Download" Click="Download_Click" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />

        </DockPanel>
    </Grid>
</Window>
