<Window x:Class="Cloudmp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Cloudmp3.ValueConverters"
        Title="Cloud Sound" Height="650" Width="910">
    <Window.Resources>
        <Image x:Key="PlayB"  Source="/Images/Play.png"
               Width="50" Height="50"/>
        <Image x:Key="StopB"  Source="/Images/Stop.png"
               Width="50" Height="50"/>
        <Image x:Key="PauseB"  Source="/Images/Pause.png"
               Width="50" Height="50"/>
        <Image x:Key="PreviousB" Source="/Images/Previous.png"
               Width="50" Height="50"/>
        <Image x:Key="NextB" Source="/Images/Next.png"
               Width="50" Height="50"/>
        <conv:PathToFileNameConverter x:Key="PathToFileName"/>
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0"
              x:Name="PlayListCol"
              Background="#35A9C4">

            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">
                <DockPanel Grid.ColumnSpan="2" VerticalAlignment="Top">
                    <ToolBarTray DockPanel.Dock="Top" Height="27" Background="#35A9C4">
                        <ToolBar Background="#35A9C4">
                            <Button x:Name="UploadButton"  Content="Upload" Click="UpLoad_Click" Background="#FF1783B4"/>
                            <Button x:Name="DownLoadButton" Content="Download" Click="Download_Click" Background="#1783B4"/>
                            <Button x:Name="LogButton" Content="Log In" Click="Log_Click" Background="#1783B4"/>
                        </ToolBar>
                    </ToolBarTray>

                </DockPanel>
                <Label x:Name="LoginStatusLabel" Foreground="#0F5575"
                       HorizontalAlignment="Center" Margin="0,25" FontSize="16"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <StackPanel Background="#35A9C4" >
                    <Label Content="PlayLists" FontSize="24" 
                       HorizontalAlignment="Center"
                       Foreground="#0F5575" />
                    <ListBox x:Name="PlaylistsBox"
                	VerticalAlignment="Top"
                    BorderThickness="0"
                	SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Path=userPlaylists}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Remove Playlist" Click="RemovePlaylist_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                    <Grid x:Name="notifarea"
                          Background="Blue"
                          Visibility="Hidden"
                          Height="25"
                          Margin="0,425,0,0">
                        <Label x:Name="notifLabel"
                            Foreground="Yellow"
                            />
                    </Grid>
                </StackPanel>
            </Grid>
            </Grid>
        <Grid Grid.Column="1" 
              Background="#107899"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="65*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Label>Name</Label>
                <Label Margin="80,0,0,0">Artist</Label>
                <Label Margin="80,0,0,0">Album</Label>
                <Label Margin="80,0,0,0">Year Published</Label>
            </StackPanel>
            <ListBox x:Name="SongsListBox"
                     Foreground="#0F5575"
                     Grid.Row="2"
                     Background="#103254"
                     SelectionMode="Single"
                     BorderThickness="0">
                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                         Color="#FF42A7C9" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                         Color="#FF42A7C9" />
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent">
                            <Label Foreground="AntiqueWhite"
                                   MouseDoubleClick="Song_MouseDoubleClick"
                            Content="{Binding Path=S_Title, Converter={StaticResource PathToFileName}}"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add to Existing Playlist" Click="AddSongToPlaylist_Click"/>
                        <MenuItem Header="Remove from Playlist" Click="RemoveSongFromPlaylist_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            
            <Grid x:Name="PlayerGrid">
                <Label Foreground="#0F5575"
                       Margin="0,25,100,0"
                       HorizontalAlignment="Right"
                        x:Name="SongTimer"
                       Content="{Binding Path=TimerText, Mode=OneWay}"/>

                <Slider Width="300"
                        x:Name="SongSlide"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="30"
                        IsEnabled="False"></Slider>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        x:Name="ButtonPanel">
                <Button x:Name="Play"
                        Style="{StaticResource NoChromeButton}"
                        Content="{StaticResource PlayB}"
                        VerticalAlignment="Center"
                        Margin="20"
                        Width="50"
                        Click="Play_Click"/>
                <Button x:Name="Stop"
                        Style="{StaticResource NoChromeButton}"
                        Margin="20"
                        VerticalAlignment="Center"
                        Content="{StaticResource StopB}"
                        Width="50"
                        Click="Stop_Click"/>
                <Button x:Name="Previous"
                        VerticalAlignment="Center"
                        Style="{StaticResource NoChromeButton}"
                        Content="{StaticResource PreviousB}"
                        Width="50"
                        Margin="20"
                        Click="Previous_Click"/>
                <Button x:Name="Next"
                        Style="{StaticResource NoChromeButton}"
                        Margin="20"
                        VerticalAlignment="Center"
                        Content="{StaticResource NextB}"
                        Width="50"
                        Click="Next_Click"/>
            </StackPanel>
            <Label x:Name="SongsLabel"
                Foreground="#0F5575"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="24">Songs</Label>
        </Grid>
        
    </Grid>
</Window>
