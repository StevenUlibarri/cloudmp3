        </Grid>
        <Grid Grid.Column="1" 
              x:Name="SongList"
              Background="#FF28286C"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="LocalSongListBox"
                     Grid.Row="1"
                     Background="Transparent"
                     SelectionMode="Single">
                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                         Color="#FF42A7C9" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                         Color="#FF42A7C9" />

                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent">
                            <Label Foreground="AntiqueWhite"
                                   MouseDoubleClick="Song_MouseDoubleClick"
                            Content="{Binding Converter={StaticResource PathToFileName}}"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="Play"
                    Foreground="White"
                    Content="{StaticResource PlayB}"
                    Margin="20"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Play_Click"/>
                <Button x:Name="Stop"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource StopB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="40"
                    Height="40"
                    Click="Stop_Click"/>
                <Button x:Name="Pause"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource PauseB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Pause_Click"/>
                <Button x:Name="Previous"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Previous"
                    Width="50"
                    Click="Previous_Click"/>
                <Button x:Name="Next"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="Next"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="40"
                    Click="Next_Click"/>
            </StackPanel>
            <Label
                Foreground="AntiqueWhite"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="24">Local Songs</Label>
        </Grid>
    </Grid>
</Window>
