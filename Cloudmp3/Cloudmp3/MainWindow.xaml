<Window x:Class="Cloudmp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Cloudmp3.ValueConverters"
        Title="Cloud Sound" Height="650" Width="910">
    <Window.Resources>
        <Image x:Key="PlayB"  Source="/Images/Play.png"
               Width="50" Height="50"/>
        <Image x:Key="StopB"  Source="/Images/Stop.png"
               Width="50" Height="50"/>
        <Image x:Key="PauseB"  Source="/Images/Pause.png"
               Width="50" Height="50"/>
        <Image x:Key="PreviousB" Source="/Images/Previous.png"
               Width="50" Height="50"/>
        <Image x:Key="NextB" Source="/Images/Next.png"
               Width="50" Height="50"/>
        <Image x:Key="Smile" Source="/Images/Smiley-face-text.png"
               Width="50" Height="50"/>
        <conv:PathToFileNameConverter x:Key="PathToFileName"/>

        <!--<conv:PathToFileNameConverter x:Key="PathToFileName"/>-->

    </Window.Resources>
    <Grid x:Name="MainSound">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              x:Name="PlayListCol"
              Background="LightBlue">



            <StackPanel Background="Black">
                <Label Content="Local Songs" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,100,0,0"/>
                <ListBox x:Name="LocalSongsBox"
                         SelectionMode="Single"
                         Margin="30">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Label Content="Cloud Songs" FontSize="24" HorizontalAlignment="Center" Foreground="White" />
                <ListBox x:Name="CloudSongsBox"
                	VerticalAlignment="Top"
                	SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

        </Grid>
        <Grid Grid.Column="1" 
              x:Name="SongList"
              Background="DarkRed"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="70*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="LocalSongListBox"
                     Grid.Row="1"
                     Background="Transparent"
                     SelectionMode="Single">
                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                         Color="#FF42A7C9" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                         Color="#FF42A7C9" />

                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent">
                            <Label Foreground="AntiqueWhite"
                                   MouseDoubleClick="Song_MouseDoubleClick"
                            Content="{Binding}"/>

                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid>
                <Label Foreground="White"
                       Margin="0,25,100,0"
                       HorizontalAlignment="Right"
                        Content="{Binding ElementName= SongSlide, Path=Value}" />

                <!--Couldnt find a attribute to have the slider not move-->

                <Slider Width="300"
                        x:Name="SongSlide"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="30"
                        IsEnabled="False"></Slider>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="Play"
                    Foreground="White"
                    Content="{StaticResource PlayB}"
                    Margin="20"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Play_Click"/>
                <Button x:Name="Stop"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource StopB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Stop_Click"/>
                <Button x:Name="Pause"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource PauseB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Pause_Click"/>
                <Button x:Name="Previous"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource PreviousB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Previous_Click"/>
                <Button x:Name="Next"
                    Foreground="White"
                    Margin="20"
                    VerticalAlignment="Center"
                    Content="{StaticResource NextB}"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="50"
                    Click="Next_Click"/>
                <Button x:Name="Smile"
                        VerticalAlignment="Center"
                        Content="{StaticResource Smile}"
                        Background="Transparent"
                        BorderThickness="0"
                        />
            </StackPanel>
            <Label
                Foreground="AntiqueWhite"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="24">Local Songs</Label>
        </Grid>
        <DockPanel Grid.ColumnSpan="2" Margin="0,0,542,588">
            <ToolBarTray DockPanel.Dock="Top" Height="27" >
                <ToolBar>
                    <Button Content="UpLoad" Click="UpLoad_Click" />
                    <Button Content="Download" Click="Download_Click" />
                    <Button Content="Stream" Click="StreamButton_Click" />
                    <Button Content="Stop" Click="StreamStopButton_Click" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />

        </DockPanel>
    </Grid>
</Window>
