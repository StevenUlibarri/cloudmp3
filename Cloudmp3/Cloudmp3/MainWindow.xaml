                <Label Content="CloudSongs"
                       HorizontalAlignment="Center"
                       FontSize="24"/>
                <ListBox x:Name="CloudSongsBox"
                         SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Converter={StaticResource PathToFileName}}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Stream"
                        x:Name="StreamButton"
                        Width="75"
                        Height="20"
                        Background="Transparent"
                        Click="StreamButton_Click"/>
                <Button Content="Stop"
                        x:Name="StreamStopButton"
                        Width="75"
                        Height="20"
