<Window x:Class="Cloudmp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cloud Sound" Height="550" Width="850">
    <Window.Resources>
    </Window.Resources>
    <Grid x:Name="MainSound">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              x:Name="PlayListCol"
              Background="LightBlue">
            <Button Content="Upload"
                    x:Name="UpLoad"
                    Width="50"
                    Height="20"
                    Margin="0,0,0,490"
                    Background="Transparent"
                    BorderThickness="0"/>
            <ListBox Background="Transparent"
                     BorderThickness="0"
                     x:Name="ListBoxPlaylist"
                     Margin="0,30,0,0">
            </ListBox>
        </Grid>
        <Grid Grid.Column="1" 
              x:Name="SongList"
              Background="Blue">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="songList"
                     Grid.Row="1"
                     Background="Transparent">
            </ListBox>
            <Label x:Name="SongPlaying"
                   Grid.Row="0"
                   Content="CurrentSong"
                   Margin="0,40,0,0"
                   Width="80"
                   VerticalAlignment="Top"
                   Foreground="White"/>
            <Button x:Name="Play"
                    Foreground="White"
                    VerticalAlignment="Bottom"
                    Content="Play"
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="25"/>
            <Button x:Name="Pause"
                    Foreground="White"
                    Margin="100,0,0,0"
                    VerticalAlignment="Bottom"
                    Content="Pause"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="35"/>
            <Button x:Name="Stop"
                    Foreground="White"
                    Margin="0,0,100,0"
                    VerticalAlignment="Bottom"
                    Content="Stop"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="30"/>
            <Button x:Name="Next"
                    Foreground="White"
                    Margin="243,0,0,0"
                    VerticalAlignment="Bottom"
                    Content="Next"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="65"/>
            <Button x:Name="Previous"
                    Foreground="White"
                    Margin="0,0,250,0"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Previous"
                    Width="50"/>


        </Grid>
        <Grid Grid.Column="2" x:Name="imightbesomething"
              Background="LightBlue">
            <Label x:Name="User"
                   Content="UserName"/>
            <Label x:Name="Pass"
                   Content="PassWord"
                   Margin="0,25,0,0"/>
            <TextBox Height="20"
                     Width="100"
                     Margin="65,0,0,490"/>
            <TextBox Margin="65,0,0,435"
                     Height="20"
                     Width="100"/>
            <Button Content="New Account"
                    x:Name="NewAcc"
                    Background="Transparent"
                    BorderThickness="0"
                    Height="20"
                    Width="80"
                    Margin="0,0,0,390"/>
        </Grid>
    </Grid>
</Window>
