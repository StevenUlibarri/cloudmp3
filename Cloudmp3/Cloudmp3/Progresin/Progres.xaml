<Window x:Class="Cloudmp3.Progresin.Progres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progres" Height="230" Width="300" Visibility="Visible">
    <Grid x:Name="Prog"
          Height="200">
        <ProgressBar x:Name="progbar" Height="20" Width="200" IsIndeterminate="False" Value="0" Margin="0,30,0,0"/>
        
        <Button x:Name="Hidbuton" Height="20" Width="100" Content="Hide" Click="Hide_Click" Margin="0,90,0,0" />
    </Grid>
</Window>
