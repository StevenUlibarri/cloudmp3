<Window x:Class="Cloudmp3.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="130" Width="300">

    <Grid Background="#FFF1F1F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Label Content="Username:" HorizontalAlignment="Center" FontSize="18"/>
        <Label Content="Password:" HorizontalAlignment="Center" Grid.Row="1" FontSize="18"/>
        <TextBox x:Name="UserNameBox" Grid.Column="1" Margin="3" BorderBrush="Black" Background="#FFDFEDFB" FontSize="16"/>
        <TextBox x:Name="PasswordBox" Grid.Column="1" Grid.Row="1" Margin="3" BorderBrush="Black" Background="#FFDFEDFB" FontSize="16"/>
        <StackPanel Grid.ColumnSpan="2" Grid.Row="2">
            <UniformGrid HorizontalAlignment="Right" >
                <Button x:Name="CancelButton" Content="Cancel" Width="68" Margin="1" FontSize="16" Click="CancelButton_Click"/>
                <Button x:Name="LoginButton"  Content="Login" Margin="1" Width="68" FontSize="16" Click="LoginButton_Click"/>
            </UniformGrid>
        </StackPanel>      
    </Grid>
</Window>
