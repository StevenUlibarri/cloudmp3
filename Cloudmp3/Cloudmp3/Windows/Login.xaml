<Window x:Class="Cloudmp3.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="130" Width="300">
    <Grid Background="#35A9C4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Label Content="Username:" HorizontalAlignment="Center" FontSize="18"/>
        <Label Content="Password:" HorizontalAlignment="Center" Grid.Row="1" FontSize="18"/>
        <TextBox x:Name="UserNameBox" Grid.Column="1" Margin="3" BorderBrush="Black" Background="#FF99C1E8" SelectionBrush="#FFCDE1F5" FontSize="16"/>
        <TextBox x:Name="PasswordBox" Grid.Column="1" Grid.Row="1" Margin="3" BorderBrush="Black" Background="#FF99C1E8" SelectionBrush="#FFCDE1F5" FontSize="16"/>
        <Button x:Name="LoginButton" Grid.Row="2" Grid.Column="1" Content="Login" Margin="2" Width="55" FontSize="16" Click="LoginButton_Click"/>
        <Button x:Name="CancelButton" Grid.Row="2" Content="Cancel" Margin="2" Width="55" FontSize="16" Click="CancelButton_Click"/>
    </Grid>
</Window>
